{
  "name": "sunat-facturacion",
  "version": "1.0.0",
  "description": "Sistema de Facturación Electrónica SUNAT - Arquitectura Serverless",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/validators && cp src/validators/catalogos.json dist/validators/ && mkdir -p src/handlers/data && cp node_modules/pdfkit/js/data/*.afm src/handlers/data/ 2>/dev/null || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "dev": "serverless offline start",
    "deploy:dev": "serverless deploy --stage dev --config serverless.dev.yml",
    "deploy:staging": "serverless deploy --stage staging --config serverless.staging.yml",
    "deploy:prod": "serverless deploy --stage prod --config serverless.prod.yml",
    "remove:dev": "serverless remove --stage dev --config serverless.dev.yml",
    "remove:staging": "serverless remove --stage staging --config serverless.staging.yml",
    "remove:prod": "serverless remove --stage prod --config serverless.prod.yml",
    "logs": "serverless logs -f",
    "logs:dev": "serverless logs -f --stage dev",
    "logs:staging": "serverless logs -f --stage staging",
    "logs:prod": "serverless logs -f --stage prod",
    "info:dev": "serverless info --stage dev",
    "info:staging": "serverless info --stage staging",
    "info:prod": "serverless info --stage prod",
    "validate": "serverless print --stage dev",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "sunat",
    "facturacion",
    "electronica",
    "peru",
    "serverless",
    "aws",
    "lambda"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.989.0",
    "@aws-sdk/client-s3": "^3.989.0",
    "@aws-sdk/client-secrets-manager": "^3.989.0",
    "@aws-sdk/client-sqs": "^3.989.0",
    "@aws-sdk/lib-dynamodb": "^3.989.0",
    "@types/aws-lambda": "^8.10.160",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@types/pdfkit": "^0.17.5",
    "@types/qrcode": "^1.5.6",
    "@types/soap": "^0.18.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "aws-sdk-client-mock": "^4.1.0",
    "eslint": "^9.39.2",
    "fast-check": "^4.5.3",
    "jest": "^29.7.0",
    "prettier": "^3.8.1",
    "serverless": "^4.32.0",
    "serverless-offline": "^14.4.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@aws-sdk/s3-request-presigner": "^3.990.0",
    "@types/xmldom": "^0.1.34",
    "axios": "^1.13.5",
    "jszip": "^3.10.1",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "soap": "^1.6.5",
    "xml-crypto": "^6.1.2",
    "xmldom": "^0.6.0"
  }
}
